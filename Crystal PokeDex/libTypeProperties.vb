            Return 1
        End If
        If lpTypeAttack1 > CurrentTypeCount Or lpTypeAttack2 > CurrentTypeCount Or lpTypeDefend1 > CurrentTypeCount Or lpTypeDefend2 > CurrentTypeCount Then
            Return 1
        End If
        Return mapTypeProperties(lpTypeAttack1, lpTypeDefend1) * mapTypeProperties(lpTypeAttack1, lpTypeDefend2) + mapTypeProperties(lpTypeAttack2, lpTypeDefend1) * mapTypeProperties(lpTypeAttack2, lpTypeDefend2)
    End Function
