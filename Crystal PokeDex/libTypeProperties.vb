    Public Function CalculateTypeProperties(Optional lpTypeAttack1 As Integer = 0, Optional lpTypeAttack2 As Integer = 0, Optional lpTypeDefend1 As Integer = 0, Optional lpTypeDefend2 As Integer = 0) As Double
